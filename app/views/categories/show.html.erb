<p id="notice"><%= notice %></p>

<i>
<%= link_to "All Categories", categories_path %> >
<%= @category.name %>
</i>

<h1><%= @category.name %></h1>

<%= render :partial => "layouts/categories", :locals => { :categories => @category.subcategories } %>

<div class="business-results">
	<% @category.businesses.each do |business| %>
		<%= link_to business do %>
			<div class="business-result">
		    <strong>
		    	<%= business.name.upcase %>
		    </strong>
		    <br/>
		    <i>
		    	<%= business.category.name %>, 
		    	<%= business.subcategory.name %>
		    </i>
				<br/>
		    <%= business.address + " " + business.street%>
		    <br/>
		    Today's Hours: 9am - 5pm
				<% if business.website? %>
					<%= link_to business.website, business.website %>
				<% end %>
			</div>
		<% end %>
	<% end %>
</div>

